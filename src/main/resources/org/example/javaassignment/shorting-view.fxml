<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="598.0" prefWidth="860.0" spacing="20.0" style="-fx-background-color: #dfe6e9;" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javaassignment.FileHandleController">
   <HBox alignment="TOP_RIGHT" prefHeight="47.0" prefWidth="463.0" />
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="624.0">
            <children>
               <Button mnemonicParsing="false" onAction="#onFileSelectButtonClick" prefHeight="26.0" prefWidth="157.0" style="-fx-background-color: #636e72; -fx-border-color: #2d3436;" text="Select File" textAlignment="RIGHT" textFill="#fffefe" />
               <Label fx:id="fileName" prefHeight="18.0" prefWidth="325.0" style="-fx-background-color: #FFFFFF; -fx-padding: 5;" text="" />
            </children>
         </HBox>
         <HBox alignment="TOP_RIGHT" prefHeight="50.0" prefWidth="678.0">
            <children>
               <Button mnemonicParsing="false" onAction="#sortButtonClick" style="-fx-background-color: #636e72; -fx-border-color: #2d3436;" text="sort" textFill="WHITE">
                  <HBox.margin>
                     <Insets right="4.0" />
                  </HBox.margin></Button>
               <ChoiceBox fx:id="choiceBox" prefWidth="150.0" />
            </children>
         </HBox>
      </children>
   </HBox>
   <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: #2d3436;">
      <VBox.margin>
         <Insets right="4.0" />
      </VBox.margin></TextArea>
  <Label fx:id="welcomeText" />
   <TableView fx:id="mainTable" prefHeight="435.0" prefWidth="839.0" style="-fx-border-color: #2d3436;">
   </TableView>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
